.container {
    width: 100%;
    height: 667px;
    background-color: gray;
    opacity: 0.8;
    position: fixed;
  }
  
  
  .cards {
    position: absolute;
    width: 220px;
    height: 220px;
    margin: 0 auto;
    padding: 10px;
    background-color: #fefefe;
    color: red;
    border-radius: 20px;
    font-size: 14px;
  }
  .cards>image {
      width: 50px;
      height: 50px;
      position: absolute;
      right: 0;
      bottom: 1px;
  }